    "@prisma/client": "^7.0.0",
    "@prisma/client-runtime-utils": "^7.3.0",
    "@privy-io/server-auth": "^1.32.5",
    "@solana/wallet-standard-util": "^1.1.2",
    "@solana/web3.js": "^1.98.0",
