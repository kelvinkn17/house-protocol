# ===========================================
# House Protocol Backend - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# Never commit .env to version control

# ===========================================
# App Configuration
# ===========================================
APP_PORT=3700
NODE_ENV=development

# ===========================================
# Database (REQUIRED)
# ===========================================
DATABASE_URL="postgresql://postgres:admin@localhost:5432/<db-name>?schema=public"

# ===========================================
# Legacy JWT (keep for internal token generation if needed)
# ===========================================
JWT_SECRET="your-jwt-secret-key-here"
JWT_EXPIRES_IN=7d

# ===========================================
# Privy Authentication (REQUIRED)
# ===========================================
# Get these from https://dashboard.privy.io
PRIVY_APP_ID="your-privy-app-id"
PRIVY_APP_SECRET="your-privy-app-secret"

# ===========================================
# Contract Addresses (Sepolia)
# ===========================================
HOUSE_VAULT_ADDRESS=0x...
HOUSE_SESSION_ADDRESS=0x...
USDH_TOKEN_ADDRESS=0x...
NITROLITE_CUSTODY_ADDRESS=0x...
BROKER_ADDRESS=0x...

# ===========================================
# Operator (broker private key for signing Nitrolite sessions + custody ops)
# ===========================================
OPERATOR_PRIVATE_KEY=0x...

# ===========================================
# RPC & APIs
# ===========================================
SEPOLIA_RPC_URL=https://11155111.rpc.thirdweb.com
ETHERSCAN_API_KEY=your-etherscan-api-key